<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/toolbar_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="4dp"
                android:scaleType="centerCrop"
                android:text="C.O.D.E B.L.A.C.K"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <View
                android:layout_width="165dp"
                android:layout_height="3dp"
                android:layout_below="@id/toolbar_text"
                android:layout_marginLeft="35dp"
                android:background="@android:color/black" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:layout_below="@id/toolbar"
        android:layout_margin="12dp">

        <VideoView
            android:id="@+id/videoview"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame">

        <TextView
            android:id="@+id/image1"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/oval"
            android:gravity="center"
            android:text="addition"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/image2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/image1"
            android:background="@drawable/oval"
            android:gravity="center"
            android:text="Subtract"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/image3"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/image2"
            android:background="@drawable/oval"
            android:gravity="center"
            android:text="multiply"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/image4"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/image1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/oval"
            android:gravity="center"
            android:text="divide"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/image5"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/image2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/image4"
            android:background="@drawable/oval"
            android:gravity="center"
            android:text="matrix"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/image6"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/image3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/image5"
            android:background="@drawable/oval"
            android:gravity="center"
            android:text="eigen"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="italic" />

    </RelativeLayout>

    <TextView
        android:id="@+id/token"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@id/relative_layout"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="topics"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/seek_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/token"
        android:layout_centerHorizontal="true"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="Seek Occurence"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek_button"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnSpeak"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:onClick="getSpeechInput"
        android:src="@drawable/ic_mic" />

</RelativeLayout>